<?xml version="1.0"?>
<project>
  <pomVersion>3</pomVersion>
  <name>Undigester</name>
  <id>undigester</id>
  <groupId>org.acmsl.undigester</groupId>
  <currentVersion>0.6b3</currentVersion>
  <organization>
    <name>ACM S.L.</name>
    <url>http://www.acm-sl.org/</url>
    <logo>http://www.acm-sl.org/images/logo.png</logo>
  </organization>
  <inceptionYear>2003-2004</inceptionYear>
  <package>org.acmsl.undigester</package>

  <shortDescription>
    Digester-like API for serializing Java objects in XML format.
  </shortDescription>

  <description>
    Undigester provides an API to serialize arbitrary Java objects in
    XML format, using a Digester-like syntax.
  </description>

  <url>http://192.168.0.2/projects/undigester/</url>
  <logo>http://192.168.0.2/projects/images/webextension.png</logo>
  <issueTrackingUrl>http://192.168.0.2/bugzilla/reports.cgi?product=undigester&amp;output=most_doomed&amp;links=1&amp;banner=1&amp;quip=1</issueTrackingUrl>
  <siteAddress>liteserver</siteAddress>
  <siteDirectory>
    /home/httpd/projects/undigester
  </siteDirectory>
  <distributionDirectory>
    /home/httpd/projects/undigester/builds/
  </distributionDirectory>

  <repository>
    <connection>
      scm:cvs:pserver:anoncvs@192.168.0.2:/home/cvs:undigester
    </connection>
    <url>
      http://192.168.0.2/viewcvs/viewcvs.cgi/undigester
    </url>
  </repository>

  <versions/>

  <mailingLists>
    <mailingList>
      <name>Undigester User List</name>
      <subscribe>
        users-subscribe@undigester.our.home
      </subscribe>
      <unsubscribe>
        users-unsubscribe@undigester.our.home
      </unsubscribe>
      <archive>
        http://lite.our.home/mailinglists/users@undigester.our.home/
      </archive>
    </mailingList>
    <mailingList>
      <name>Undigester Developer List</name>
      <subscribe>
        dev-subscribe@undigester.our.home
      </subscribe>
      <unsubscribe>
        dev-unsubscribe@undigester.our.home
      </unsubscribe>
      <archive>
        http://192.168.0.2/mailinglists/dev@undigester.our.home/
      </archive>
    </mailingList>
  </mailingLists>

  <developers>

    <developer>
      <name>Jose San Leandro</name>
      <id>chous</id>
      <email>chous@our.home</email>
      <organization>ACM-SL</organization>
    </developer>
  </developers>

  <dependencies>

    <dependency>
      <groupId>acmsl-commons</groupId>
      <artifactId>commons</artifactId>
      <version>0.5.5</version>
      <url>http://www.acm-sl.org/</url>
    </dependency>

    <dependency>
      <id>commons-collections</id>
      <version>2.1</version>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>

    <dependency>
      <id>commons-beanutils</id>
      <version>1.6.1</version>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>

    <dependency>
      <id>commons-logging</id>
      <version>1.0.3</version>
      <url>http://jakarta.apache.org/commons/</url>
    </dependency>

    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
    </dependency>

  </dependencies>

  <build>

    <nagEmailAddress>
      dev@our.home
    </nagEmailAddress>

    <sourceDirectory>../../java</sourceDirectory>

    <unitTestSourceDirectory>../../java/unittests</unitTestSourceDirectory>
    <integrationUnitTestSourceDirectory/>

    <aspectSourceDirectory/>

    <!-- Unit test cases -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/RepositoryTest.java</exclude>
      </excludes>
    </unitTest>
              
    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <includes>
        <include>*.xsd</include>
        <include>log4j.properties</include>
      </includes>
    </resources>

    <!-- Integration unit test cases -->
    <integrationUnitTest/>

    <jars/>

  </build>

  <reports>
    <report>maven-changelog-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-checkstyle-plugin</report>

    <!--
      PMD makes the site generation crash if no errors are
      found. It's better to do it manually.
    -->
    <report>maven-pmd-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-jdepend-plugin</report>
    <report>maven-junit-report-plugin</report>
    <report>maven-jxr-plugin</report>
    <report>maven-license-plugin</report>
    <report>maven-linkcheck-plugin</report>
    <report>maven-tasklist-plugin</report>
    <!--
      JellyDoc makes the site generation crash if no errors are
      found. It's better to do it manually.
    <report>maven-jellydoc-plugin</report>
    -->
  </reports>
</project>
